<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <meta name="robots" content="noindex,nofollow" />
        <title>{% block title %}{% endblock %}</title>
        <link href="{{ asset('bundles/framework/css/structure.css', absolute=true) }}" rel="stylesheet" />
        <link href="{{ asset('bundles/framework/css/body.css', absolute=true) }}" rel="stylesheet" />
        {% block stylesheet %}
            <link rel="stylesheet" href="{{ asset('bundles/ajaxengine/css/ajax-engine.css') }}" />
        {% endblock stylesheet %}
    </head>
    <body>
        <div class="ajax-container">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascript %}
            <script src="{{ asset('bundles/ajaxengine/js/jquery/jquery-1.11.2.min.js') }}"></script>
            <script src="{{ asset('bundles/ajaxengine/js/modernizr/modernizr-2.8.3.js') }}"></script>
            <script src="{{ asset('bundles/ajaxengine/js/ajaxengine/ajax-engine-1.0.0.js') }}"></script>
            <script>
                $(document).ready(function(){
                    $('.ajax-container').ajaxEngine();
                });
            </script>
        {% endblock javascript %}
    </body>
</html>
